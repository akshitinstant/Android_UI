<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
android:padding="20dp"
    tools:context=".MyFrag3">

    <TextView
        android:id="@+id/txtFrag3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_green_dark"
        android:text="@string/parent_fragment_n_fragment_3" />

    <FrameLayout
        android:id="@+id/childContainer"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/navBtnToConatiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_to_n_container"
        android:layout_gravity="top|end"
        />

 <Button
        android:id="@+id/navBtnToChildContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:text="@string/nav_to_n_child"
        />

</FrameLayout>